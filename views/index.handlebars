<header>
  <nav class="main-nav">

    <div class="logo">
      Flex <span class="navtitle">Overflow</span>
    </div>
    <div class="menu">
      <ul class="menu-list">
        <li class="menu-item"><a href="q-n-a.html">Interview Questions</a></li>
        <li class="menu-item"><a href="/mainblog">Forum</a></li>
        <li class="menu-item"><a href="aboutus.html">About</a></li>
        <li class="menu-item"><a href="project.html">Project</a></li>
        {{#if user}}
        <li class="menu-item">
          <a href="/api/logout" id="profile-link">Logout</a>
        </li>
        {{/if}}
      </ul>
    </div>
  </nav>
</header>
<div id="gutter"></div>
<div class="site-width-limit">
  {{!-- <div class="col-md-12"> --}}

    <ul class="list-group">

      <li class="list-group-item question-input-back">
        <div class="input-group">
          <textarea rows="4" cols="10" class="form-control question-input" id="post-body" placeholder="Ask Your Question"></textarea>
          <div class="input-group-btn">
            <button type="button" class="btn btn-default post-button question-input" id="post-submit">
              <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            </button>
             
          </div>
        </div>
      </li>
  </ul>

  <div id="all-questions">
    {{#each QuestionsArr}}
    <div class="question-section"> 
    <div class="question-line">
        <span class="question-title">{{this.question}}</span>
     <button type="button" class="btn btn-default comment-delete glyphicon glyphicon-remove-circle" id="{{id}}" aria-hidden="true">
            </button>
    </div>
  
    <ul class="list-group">
       
      {{#each UserAnswers}}
      {{!-- nested each: the answer array is going to be looped while the question array is looped --}}
      <div class="new-answer">{{this.answer}}</div>
      {{/each}}
      <li class="answer-box">
        <div class="input-group">
          <input type="text" class="form-control comment-body" id="post-{{id}}" data-postid="{{id}}"
            placeholder="Answer">
          <div class="input-group-btn">
            <button type="button" class="btn btn-default comment-submit" id="{{id}}">
              <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            </button>
         
          </div>
        </div>
      </li>
    </ul>
     </div>
    {{/each}}
  </div>

</div>

<!-- Custom Script -->
<script src="/js/mainblogpost.js" type="text/javascript"></script>
